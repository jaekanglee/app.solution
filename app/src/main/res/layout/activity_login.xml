<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.ppizil.solutionapp.viewmodel.auth.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dp16"
        android:paddingEnd="@dimen/dp16">

        <EditText
            android:id="@+id/input_id"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@={viewmodel.lEmail}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <EditText
            android:id="@+id/input_pwd"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="@={viewmodel.lPwd}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_id"
            app:layout_constraintVertical_bias="0" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:onClick="@{()->viewmodel.onClickConfirmBtn()}"
            android:text="로그인"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_pwd"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/text_signup"
            style="@style/text14black"
            android:padding="@dimen/dp14"
            android:text="@string/text_signup_title"
            android:onClick="@{()->viewmodel.onClickSignupBtn()}"
            app:layout_constraintBottom_toBottomOf="@+id/text_find_id"
            app:layout_constraintEnd_toStartOf="@+id/text_find_id"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@+id/btn_signup"
            app:layout_constraintTop_toTopOf="@+id/text_find_id"
            app:layout_constraintVertical_bias="0.5" />


        <TextView
            android:id="@+id/text_find_id"
            style="@style/text14black"
            android:padding="@dimen/dp14"
            android:text="@string/text_find_id"
            android:onClick="@{()->viewmodel.onClickFindId()}"
            app:layout_constraintBottom_toBottomOf="@+id/text_find_pwd"
            app:layout_constraintEnd_toStartOf="@+id/text_find_pwd"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@+id/btn_signup"
            app:layout_constraintTop_toTopOf="@+id/text_find_pwd"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/text_find_pwd"
            style="@style/text14black"
            android:padding="@dimen/dp14"
            android:text="@string/text_find_pwd"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{()->viewmodel.onClickFindPwd()}"
            app:layout_constraintEnd_toEndOf="@+id/btn_signup"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_signup"
            app:layout_constraintVertical_bias="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>